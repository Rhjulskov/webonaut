template(name="imageSection")
  // @hubble Variable image_position can be either left or right. sec_color can be true to toggle secondary color state
  
  section.imageSection(data-midnight="default" class="{{#if image_position}}is-left{{/if}} {{#if sec_color}}sec-color{{/if}}")
    .section-wrapper
      .imageSection__text
        .imageSection__wrapper
          if header
            h2.slide-up {{header}}
          if content
            p.slide-up {{content}}

          if btn_text
            +button href=btn_href text=btn_text color=btn_color

      if image_src
        .imageSection__image
          img(src=image_src alt=image_alt)
